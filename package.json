{
  "name": "composable-http-client",
  "version": "1.0.3",
  "description": "A composable HTTP client library with procedure builders, schema validation, and retry logic",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./axios": {
      "types": "./dist/axios.d.ts",
      "import": "./dist/axios.js",
      "require": "./dist/axios.cjs"
    },
    "./fetch": {
      "types": "./dist/fetch.d.ts",
      "import": "./dist/fetch.js",
      "require": "./dist/fetch.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly --declaration --outDir dist",
    "dev": "vite build --watch",
    "test": "vitest",
    "test:run": "vitest run --reporter=junit --outputFile=test-report.junit.xml",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.{ts,json,md}",
    "format:check": "prettier --check src/**/*.{ts,json,md}",
    "typecheck": "tsc --noEmit",
    "typecheck:strict": "tsc --project tsconfig.dev.json",
    "typecheck:watch": "tsc --noEmit --watch",
    "security": "pnpm audit --audit-level high",
    "security:fix": "pnpm audit --fix",
    "size": "npm run build && npm run size:check",
    "size:check": "echo '=== Bundle Sizes ===' && ls -lh dist/*.{js,cjs} | awk '{printf \"%-25s %s\\n\", $9, $5}' && echo '\n=== Total Package Size ===' && du -sh dist/ && echo '\n=== Gzipped Sizes ===' && gzip -9 -c dist/index.js | wc -c | awk '{printf \"index.js (gzipped): %s bytes\\n\", $1}' && gzip -9 -c dist/index.cjs | wc -c | awk '{printf \"index.cjs (gzipped): %s bytes\\n\", $1}'",
    "prepare": "husky"
  },
  "keywords": [
    "http",
    "client",
    "composable",
    "typescript",
    "zod",
    "axios",
    "fetch",
    "retry",
    "validation",
    "framework-agnostic",
    "nodejs",
    "browser",
    "universal",
    "http-client",
    "composable-http",
    "composable-http-client",
    "composable-http-client-library"
  ],
  "author": "Oluwadamilola Babalola<@thedammyking>",
  "license": "MIT",
  "packageManager": "pnpm@10.11.1",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "zod": "^3.25.51"
  },
  "devDependencies": {
    "@codecov/vite-plugin": "^1.9.1",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.28.0",
    "@types/node": "^22.15.30",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "@vitest/coverage-v8": "^3.2.2",
    "all-contributors-cli": "^6.26.1",
    "eslint": "^9.28.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "msw": "^2.9.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.2"
  },
  "lint-staged": {
    "*.{ts}": [
      "eslint src --ext .ts",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
